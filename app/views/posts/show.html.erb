<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <p class="level-item">
            <strong>Actions</strong>
        </p>
      </div>
      <!-- Right side -->
      <div class="level-right">
        <p class="level-item">
          <%= link_to "Modifier", edit_post_path(@post), class:"button" %>
        </p>
        <p class="level-item">
        <%= link_to "Supprimer", post_path(@post), method: :delete, data: { confirm: "Une fois supprimé, l'article ne pourra pas être récupéré." }, class:"button is-danger" %>
        </p>
      </div>
    </nav>
    <hr/>

    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</section>
